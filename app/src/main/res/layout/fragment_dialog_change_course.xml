<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/marginLarge"
        android:paddingEnd="@dimen/marginLarge"
        android:orientation="vertical">

    <TextView
            android:id="@+id/courseName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/HeadingTextView"
            android:layout_marginBottom="@dimen/marginLarge"
            android:text="Ime kolegija"/>

    <RadioGroup
            android:id="@+id/btnGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <RadioButton
                android:id="@+id/btnMissed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Propustio"
                android:layout_weight="1"/>

        <RadioButton
                android:id="@+id/btnAttend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:layout_weight="1"/>

    </RadioGroup>

    <EditText
            android:id="@+id/numOfHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Broj sati"
            android:layout_marginBottom="@dimen/marginLarge"
            android:inputType="number"
            tools:ignore="Autofill"/>

    <Button
            android:id="@+id/btnChangeCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginLarge"
            android:layout_marginBottom="@dimen/marginLarge"
            android:layout_gravity="center"
            android:text="@string/spremi"/>

</LinearLayout>